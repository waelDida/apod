<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        tools:context=".intro.IntroFragment">
    <data>
        <variable name="introViewModel"
                  type="com.projects.mycompany.apod_app.intro.IntroViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <Button
                android:text="@string/main_button_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="17sp"
                android:textColor="@color/secondaryDarkColor"
                android:onClick="@{() -> introViewModel.navigate()}"
                android:id="@+id/intro_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/margin_low"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/margin_low"
                android:layout_marginBottom="@dimen/margin_low" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_low" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.86"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
